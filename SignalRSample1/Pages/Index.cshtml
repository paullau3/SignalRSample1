        <label for="timerInput">Set Timer (2 to 30 seconds):</label>
        <input type="number" id="timerInput" min="2" max="30" value="5">
        <button id="startButton">Start Timer</button>
        <button id="stopButton">Stop Timer</button>
        <button id="clearList">Clear List</button>
